rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is accessing their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if user is a customer
    function isCustomer() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'customer';
    }

    // Helper function to check if user is a business
    function isBusiness() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'business';
    }

    // Helper function to check if user is a business pending
    function isBusinessPending() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'business_pending';
    }

    // üë§ Users Collection
    // Users can read and write their own profile, but cannot change their role
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) && 
                      (
                        (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role'])) ||
                        (resource.data.role == 'business_pending' && request.resource.data.role == 'business')
                      );
      allow delete: if isOwner(userId);
    }

    // üè¢ Businesses Collection
    // Public can read business details (for customer browsing)
    // Only the business owner can write/update their business data
    match /businesses/{businessId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Allow owner to update everything
      // Allow anyone (e.g. customers) to update ONLY rating fields
      allow update: if (isOwner(businessId) && (isBusiness() || isBusinessPending())) || 
                    (isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['avgRating', 'totalReviews']));
      allow delete: if isOwner(businessId) && (isBusiness() || isBusinessPending());
    }

    // üìÖ Appointments Collection
    // Customers can create appointments
    // Customers can read/update their own appointments
    // Businesses can read/update appointments for their salon
    match /appointments/{appointmentId} {
      // üîì Allow all authenticated users to read appointments (Required for availability calculation)
      // Note: In a production app with sensitive data, use a separate 'slots' collection or Cloud Functions
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated() && 
                      request.resource.data.customerId == request.auth.uid;
      allow update: if isAuthenticated() && 
        (resource.data.customerId == request.auth.uid || 
         resource.data.businessId == request.auth.uid);
      allow delete: if isAuthenticated() && resource.data.customerId == request.auth.uid;
    }

    // üìù Reviews Collection
    match /reviews/{reviewId} {
      allow read: if true; // Public can read reviews
      
      // Allow customers to create their own reviews
      allow create: if isAuthenticated() && isCustomer() &&
                      request.resource.data.customerId == request.auth.uid;
                      
      // Allow businesses to create reviews for themselves (for seeding/testing)
      allow create: if isBusiness() && request.resource.data.businessId == request.auth.uid;

      allow update, delete: if isAuthenticated() && 
                              resource.data.customerId == request.auth.uid;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
